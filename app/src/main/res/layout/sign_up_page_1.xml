    <TextView
        android:id="@+id/create_acc_tv"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:text="@string/create_acc"
        android:textAlignment="center"
        android:textSize="30sp"
        android:fontFamily="@font/inter"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/profinder_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/part_one_tv"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:text="@string/part_one"
        android:textAlignment="center"
        android:textSize="20sp"
        android:fontFamily="@font/inter"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/create_acc_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/choose_acc_type_tv"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/choose_acc_type"
        android:textAlignment="textStart"
        android:textSize="20sp"
        android:fontFamily="@font/inter"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/part_one_tv"
        app:layout_constraintBottom_toTopOf="@id/student_acc_type_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/student_acc_type_btn"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:text="@string/student"
        android:background="@drawable/selector_button"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/inter"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/choose_acc_type_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/teacher_acc_type_btn"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:text="@string/teacher"
        android:background="@drawable/selector_button"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/inter"
        android:layout_marginTop="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/student_acc_type_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/back_to_login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back_to_login"
        android:textColor="@color/base_green"
        android:background="@drawable/selector_transparent_button"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/inter"
        android:layout_marginBottom="20dp"
        android:paddingStart="20dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"/>

</androidx.constraintlayout.widget.ConstraintLayout>