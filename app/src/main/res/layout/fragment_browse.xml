<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/landing_page_constraint"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/browse_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:text="@string/browse_instructors"
        android:layout_marginTop="30dp"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/search_bar_tf"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_border"
        android:backgroundTint="@color/light_grey"
        android:hint="@string/search"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintWidth_min="200dp"
        app:layout_constraintWidth_max="400dp"
        app:layout_constraintTop_toBottomOf="@id/browse_lbl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="text"
        android:autofillHints="username" />

    <ImageView
        android:id="@+id/search_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/search_icon"
        app:layout_constraintDimensionRatio="1"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/search_bar_tf"
        app:layout_constraintEnd_toEndOf="@id/search_bar_tf"
        app:layout_constraintBottom_toBottomOf="@id/search_bar_tf"
        android:contentDescription="@string/search_icon" />

    <ImageView
        android:id="@+id/filter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/filter_icon"
        app:layout_constraintDimensionRatio="1"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/search_bar_tf"
        app:layout_constraintStart_toEndOf="@id/search_bar_tf"
        app:layout_constraintBottom_toBottomOf="@id/search_bar_tf"
        android:contentDescription="@string/search_icon" />


    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".7"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/search_bar_tf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!--Just some sample teachers, actual prototype will be automatic based on the number of teachers-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scrollview_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/teacher_btn_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/teacher_browse_box"
                app:layout_constraintWidth_min="300dp"
                app:layout_constraintWidth_max="600dp"
                app:layout_constraintHeight_min="120dp"
                app:layout_constraintHeight_max="300dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/teacher_profile_image_1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="15dp"
                app:layout_constraintDimensionRatio="1:1"
                android:src="@drawable/profile_placeholder_icon"
                app:layout_constraintTop_toTopOf="@id/teacher_btn_1"
                app:layout_constraintBottom_toBottomOf="@id/teacher_btn_1"
                app:layout_constraintStart_toStartOf="@id/teacher_btn_1"
                android:contentDescription="@string/teacher_profile_image" />

            <TextView
                android:id="@+id/teacher_name_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/teacher_name_placeholder"
                android:textColor="@color/white"
                android:fontFamily="@font/inter"
                android:textAlignment="textStart"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                app:layout_constraintStart_toEndOf="@id/teacher_profile_image_1"
                app:layout_constraintTop_toTopOf="@id/teacher_btn_1"
                app:layout_constraintEnd_toEndOf="@id/teacher_btn_1"
                app:layout_constraintBottom_toBottomOf="@id/teacher_profile_image_1"/>

            <TextView
                android:id="@+id/location_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/current_location"
                android:textColor="@color/cit_red"
                android:fontFamily="@font/inter"
                android:textAlignment="textStart"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                app:layout_constraintStart_toEndOf="@id/location_icon_1"
                app:layout_constraintTop_toTopOf="@id/location_icon_1"
                app:layout_constraintEnd_toEndOf="@id/teacher_btn_1"
                app:layout_constraintBottom_toBottomOf="@id/location_icon_1"/>

            <ImageView
                android:id="@+id/location_icon_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/location_icon"
                app:layout_constraintDimensionRatio="1"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/teacher_name_1"
                app:layout_constraintStart_toEndOf="@id/teacher_profile_image_1"
                app:layout_constraintBottom_toBottomOf="@id/teacher_profile_image_1"
                android:contentDescription="@string/location_icon" />

            <Button
                android:id="@+id/teacher_btn_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/teacher_browse_box"
                app:layout_constraintWidth_min="300dp"
                android:layout_marginTop="10dp"
                app:layout_constraintWidth_max="600dp"
                app:layout_constraintHeight_min="120dp"
                app:layout_constraintHeight_max="300dp"
                app:layout_constraintTop_toBottomOf="@id/teacher_btn_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/teacher_profile_image_2"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="15dp"
                app:layout_constraintDimensionRatio="1:1"
                android:src="@drawable/profile_placeholder_icon"
                app:layout_constraintTop_toTopOf="@id/teacher_btn_2"
                app:layout_constraintBottom_toBottomOf="@id/teacher_btn_2"
                app:layout_constraintStart_toStartOf="@id/teacher_btn_2"
                android:contentDescription="@string/teacher_profile_image"/>

            <TextView
                android:id="@+id/teacher_name_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/teacher_name_placeholder"
                android:textColor="@color/white"
                android:fontFamily="@font/inter"
                android:textAlignment="textStart"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                app:layout_constraintStart_toEndOf="@id/teacher_profile_image_2"
                app:layout_constraintTop_toTopOf="@id/teacher_btn_2"
                app:layout_constraintEnd_toEndOf="@id/teacher_btn_2"
                app:layout_constraintBottom_toBottomOf="@id/teacher_profile_image_2"/>

            <TextView
                android:id="@+id/location_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/current_location"
                android:textColor="@color/cit_red"
                android:fontFamily="@font/inter"
                android:textAlignment="textStart"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                app:layout_constraintStart_toEndOf="@id/location_icon_2"
                app:layout_constraintTop_toTopOf="@id/location_icon_2"
                app:layout_constraintEnd_toEndOf="@id/teacher_btn_2"
                app:layout_constraintBottom_toBottomOf="@id/location_icon_2"/>

            <ImageView
                android:id="@+id/location_icon_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/location_icon"
                app:layout_constraintDimensionRatio="1"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/teacher_name_2"
                app:layout_constraintStart_toEndOf="@id/teacher_profile_image_2"
                android:contentDescription="@string/location_icon" />

            <Button
                android:id="@+id/teacher_btn_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/teacher_browse_box"
                app:layout_constraintWidth_min="300dp"
                android:layout_marginTop="10dp"
                app:layout_constraintWidth_max="600dp"
                app:layout_constraintHeight_min="120dp"
                app:layout_constraintHeight_max="300dp"
                app:layout_constraintTop_toBottomOf="@id/teacher_btn_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/teacher_profile_image_3"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="15dp"
                app:layout_constraintDimensionRatio="1:1"
                android:src="@drawable/profile_placeholder_icon"
                app:layout_constraintTop_toTopOf="@id/teacher_btn_3"
                app:layout_constraintBottom_toBottomOf="@id/teacher_btn_3"
                app:layout_constraintStart_toStartOf="@id/teacher_btn_3"
                android:contentDescription="@string/teacher_profile_image"/>

            <TextView
                android:id="@+id/teacher_name_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/teacher_name_placeholder"
                android:textColor="@color/white"
                android:fontFamily="@font/inter"
                android:textAlignment="textStart"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                app:layout_constraintStart_toEndOf="@id/teacher_profile_image_3"
                app:layout_constraintTop_toTopOf="@id/teacher_btn_3"
                app:layout_constraintEnd_toEndOf="@id/teacher_btn_3"
                app:layout_constraintBottom_toBottomOf="@id/teacher_profile_image_3"/>

            <TextView
                android:id="@+id/location_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/current_location"
                android:textColor="@color/cit_red"
                android:fontFamily="@font/inter"
                android:textAlignment="textStart"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                app:layout_constraintStart_toEndOf="@id/location_icon_3"
                app:layout_constraintTop_toTopOf="@id/location_icon_3"
                app:layout_constraintEnd_toEndOf="@id/teacher_btn_3"
                app:layout_constraintBottom_toBottomOf="@id/location_icon_3"/>

            <ImageView
                android:id="@+id/location_icon_3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/location_icon"
                app:layout_constraintDimensionRatio="1"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/teacher_name_3"
                app:layout_constraintStart_toEndOf="@id/teacher_profile_image_3"
                app:layout_constraintBottom_toBottomOf="@id/teacher_profile_image_3"
                android:contentDescription="@string/location_icon" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/red_rectangle_bg"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:src="@drawable/red_rectangle"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/red_rectangle_bg" />

    <ImageView
        android:id="@+id/browse_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/browse_icon_clicked"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@id/red_rectangle_bg"
        app:layout_constraintStart_toStartOf="@id/red_rectangle_bg"
        app:layout_constraintTop_toTopOf="@id/red_rectangle_bg"
        app:layout_constraintEnd_toStartOf="@id/profile_icon"
        android:contentDescription="@string/browse_icon" />

    <ImageView
        android:id="@+id/profile_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/profile_icon"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@id/red_rectangle_bg"
        app:layout_constraintStart_toEndOf="@id/browse_icon"
        app:layout_constraintTop_toTopOf="@id/red_rectangle_bg"
        app:layout_constraintEnd_toStartOf="@id/settings_icon"
        android:contentDescription="@string/profile_icon" />

    <ImageView
        android:id="@+id/settings_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/settings_icon"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@id/red_rectangle_bg"
        app:layout_constraintStart_toEndOf="@id/profile_icon"
        app:layout_constraintTop_toTopOf="@id/red_rectangle_bg"
        app:layout_constraintEnd_toEndOf="@id/red_rectangle_bg"
        android:contentDescription="@string/profile_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>