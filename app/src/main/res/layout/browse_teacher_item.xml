<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/cit_yellow"
        android:padding="10dp">

            <ImageView
                android:id="@+id/teacher_profile_image"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="15dp"
                app:layout_constraintDimensionRatio="1:1"
                android:src="@drawable/profile_placeholder_icon"
                android:contentDescription="@string/teacher_profile_image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                    <TextView
                        android:id="@+id/teacher_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/teacher_name_placeholder"
                        android:textColor="@color/white"
                        android:fontFamily="@font/inter"
                        android:textAlignment="textStart"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:autoSizeTextType="uniform"
                        android:maxLines="1"/>

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/current_location"
                        android:textColor="@color/cit_red"
                        android:fontFamily="@font/inter"
                        android:textAlignment="textStart"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:autoSizeTextType="uniform"
                        android:maxLines="1"
                        app:layout_constraintStart_toEndOf="@id/location_icon"
                        app:layout_constraintTop_toTopOf="@id/location_icon"
                        app:layout_constraintEnd_toEndOf="@id/teacher_btn"
                        app:layout_constraintBottom_toBottomOf="@id/location_icon"/>

                    <ImageView
                        android:id="@+id/location_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/location_icon"
                        app:layout_constraintDimensionRatio="1"
                        android:layout_marginEnd="10dp"
                        app:layout_constraintTop_toBottomOf="@id/teacher_name"
                        app:layout_constraintStart_toEndOf="@id/teacher_profile_image"
                        app:layout_constraintBottom_toBottomOf="@id/teacher_profile_image"
                        android:contentDescription="@string/location_icon" />

            </LinearLayout>

    </LinearLayout>

</LinearLayout>